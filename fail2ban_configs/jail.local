# ##################################################################
# DEFAULT SETTINGS
# ##################################################################

[DEFAULT]
ignoreip  = 127.0.0.1
bantime   = 600
backend   = polling
banaction = iptables-multiport
protocol  = tcp
chain     = INPUT

# ##################################################################
# SSH PORT PROTECTION
# ##################################################################

[ssh]
enabled  = true
port     = ssh
filter   = sshd
logpath  = /var/log/auth.log
bantime  = 600
maxretry = 5
findtime = 60

# ##################################################################
# FABQR PORT 8081 PROTECTION
# ##################################################################

[fabqr-private]
enabled  = true
port     = 8081
filter   = fabqr-http
logpath  = /home/fabqr/fabqr_data/apache_logs/fabqr_private_access.log
bantime  = 600
maxretry = 500
findtime = 20

[fabqr-private-auth]
enabled  = true
port     = 8081
filter   = fabqr-auth
logpath  = /home/fabqr/fabqr_data/apache_logs/fabqr_private_error.log
bantime  = 600
maxretry = 5
findtime = 600

# ##################################################################
# FABQR PORT 8090 PROTECTION
# ##################################################################

[fabqr-public]
enabled  = true
port     = 8090
filter   = fabqr-http
logpath  = /home/fabqr/fabqr_data/apache_logs/fabqr_public_access.log
bantime  = 600
maxretry = 500
findtime = 20