<VirtualHost *:8090>

        DocumentRoot /home/fabqr/fabqr_data/www/public

        # Custom access logging, needed for fail2ban network protection rules
        LogFormat "%h -- [%t] -- \"%r\"" fabqraccesslog
        CustomLog ${APACHE_LOG_DIR}/fabqr_public_access.log fabqraccesslog

        <Directory /home/fabqr/fabqr_data/www/public/>
                # Options only allow to follow symlinks
                Options +FollowSymLinks -Indexes -Includes -ExecCGI

                # Allowed access from all
                AllowOverride All
                Order Allow,Deny
                Allow from all
        </Directory>

</VirtualHost>
